<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custEpi_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:elevation="2dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/episode_youtube_player_view_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/episode_youtube_player_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:autoPlay="false"
                app:showFullScreenButton="false"
                app:showYouTubeButton="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/custEpi_episodeName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/episode_youtube_player_view_ll"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:text="Episode no 1"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/custEpi_dramaName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/custEpi_episodeName_tv"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Drama name"
            android:textSize="12sp" />

        <!--        <ImageView-->
        <!--            android:id="@+id/custEpisode_download_iv"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_below="@id/custEpi_rl"-->
        <!--            android:layout_alignParentEnd="true"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:background="@drawable/shape_light_white"-->
        <!--            android:padding="5dp"-->
        <!--            android:src="@drawable/ic_vec_download" />-->

        <ImageView
            android:id="@+id/custEpisode_fav_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/episode_youtube_player_view_ll"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_light_white"
            android:padding="7dp"
            android:src="@drawable/ic_vec_favorite" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>